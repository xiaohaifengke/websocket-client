{
  "name": "websocket-client",
  "version": "0.5.0",
  "description": "A lightweight js lib for WebSocket.",
  "scripts": {
    "commit": "commit",
    "cz": "git-cz",
    "cz-tip": "echo \"first, npm install commitizen -g then use git cz\" && exit 1",
    "lint": "eslint src",
    "lint:fix": "eslint src --cache --fix",
    "lint:format": "prettier-eslint 'src/**/*.js' --write",
    "dev:window": "cross-env BABEL_ENV=window NODE_ENV=development webpack",
    "build:window": "cross-env BABEL_ENV=window NODE_ENV=production webpack",
    "build:es": "rimraf es && cross-env BABEL_ENV=es babel src -d es --source-maps",
    "build": "yarn dev:window && yarn build:window && yarn build:es"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "main": "lib/websocket-client.js",
  "module": "es/index.js",
  "author": [
    {
      "name": "Jhail",
      "email": "jiahailiu.xhfk@gmail.com",
      "url": ""
    }
  ],
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/prompt-cli": "^8.3.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "commitizen": "^4.0.3",
    "cross-env": "^6.0.3",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier-eslint-cli": "^5.0.0",
    "prompt-cli": "^0.2.1",
    "standard-version": "^7.1.0",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  },
  "keywords": [
    "websocket"
  ],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaohaifengke/arc"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
